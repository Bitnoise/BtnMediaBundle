{% block listModal %}
<div class="{% if expanded == true %}expanded{% endif %}">
    <div class="modal fade btn-media-modal " tabindex="-1" role="dialog"
         style="{% if expanded == true %}width: 100%; height: 100%; left: 0; top: 0; margin-left: 0;{% endif %}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Choose media:</h4>
                    <select class="category-filter">
                        <option value="0">choose category</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="modal-body" style="{% if expanded == true %}height: 70%;{% endif %}">
                    {% include 'BtnMediaBundle::_list.html.twig' %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary submit">Submit</button>
                </div>
            </div> <!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
{% endblock %}