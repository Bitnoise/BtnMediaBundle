<div id="tree" class="top-offset" bind-jstree {{ not modal ? 'data-change-jstree="reload"' }}>
    <ul>
        <li class="{{ categories ? 'jstree-open' : 'jstree-closed' }}" data-jstree='{"icon":"glyphicon glyphicon-file"}'> {# {{ categories ? ',"opened":true' }} #}
            <a href="{{ url('btn_media_mediacontrol_media_index') }}"
                data-remote="formContainer"
                class="node-title">{{ 'btn_media.media.all'|trans }}</a> |
            <ul>
                {% for category in categories %}
                    {% include 'BtnMediaBundle:MediaCategoryControl:_tree.html.twig' %}
                {% endfor %}
            </ul>
        </li>
    </ul>
</div>
<div class="top-offset">
    <a href="{{ url('btn_media_mediacontrol_new_category') }}" class="btn btn-primary btn-sm">{{ 'btn_media.category.create'|trans }}</a>
</div>
