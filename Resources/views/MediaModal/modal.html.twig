{% block listModal %}
<div class="{% if separated == true %}expanded{% endif %}">
    <div class="modal fade btn-media-modal" tabindex="-1" role="dialog"
        {# style="{% if separated == true %}width: 100%; height: 100%; left: 0; top: 0; margin-left: 0;{% endif %}" #}
        >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'btn_media.media.choose'|trans }}</h4>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            {{ render(controller('BtnMediaBundle:MediaCategoryControl:tree', {modal: true})) }}
                        </div>
                        <div class="col-md-8 modal-body-content">
                            {% include 'BtnMediaBundle:MediaModal:_content.html.twig' %}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary submit">{{ 'btn_media.media.choose_submit'|trans }}</button>
                </div>
            </div> <!-- /.modal-content -->
        </div><!-- /.modal-dialog -->

        {% block stylesheets %}
            {% stylesheets
                '@BtnAdminBundle/Resources/public/css/jstree/style.min.css'
                '@BtnAdminBundle/Resources/public/css/jstree/nodes.css'
                '@BtnMediaBundle/Resources/public/css/modal.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts
                '@BtnAdminBundle/Resources/public/js/jstree.min.js'
                '@BtnAdminBundle/Resources/public/js/nodes.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </div><!-- /.modal -->
</div>
{% endblock %}
