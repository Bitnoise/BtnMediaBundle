{% block btn_media_widget %}
    {{ block('choice_widget') }}
    {% if value and preview|default() and form.vars.data.path|default() %}
        <div class="btn-preview btn-preview-media" btn-preview-for="{{ id }}">
            <img src="{{ form.vars.data.path|imagine_filter(preview_filter) }}" alt=""/>
        </div>
    {% endif %}
{% endblock %}
