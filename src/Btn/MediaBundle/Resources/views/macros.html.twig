{% macro img(image, attr = {}, imagine_filter) %}
{% spaceless %}
    {% if image.path|default('') %}
        {% if not attr.alt|default('') and image.description|default('') %}
            {% set attr = attr|merge({alt: image.description}) %}
        {% endif %}
        <img src="{{ image.path|imagine_filter(imagine_filter) }}"
            {% if attr is iterable %}
                {% for attrname, attrvalue in attr %}
                    {{ " " }}
                    {% if attrname in ['placeholder', 'title'] %}
                        {{ attrname }}="{{ attrvalue|trans }}"
                    {% elseif attrvalue is sameas(true) %}
                        {{ attrname }}="{{ attrname }}"
                    {% elseif attrvalue is not sameas(false) %}
                        {{ attrname }}="{{ attrvalue }}"
                    {% endif %}
                {% endfor %}
            {% endif %}
        />
    {% endif %}
{% endspaceless %}
{% endmacro %}
